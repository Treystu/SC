{
  "dashboard": {
    "id": null,
    "title": "Sovereign Communications - Mesh Network Health",
    "tags": ["sovereign-communications", "mesh", "health"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Active Peers",
        "type": "stat",
        "targets": [
          {
            "expr": "sc_mesh_active_peers",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "red",
                  "value": 0
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Peer Connection Status",
        "type": "table",
        "targets": [
          {
            "expr": "sc_mesh_peer_status",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Message Routing Success Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "rate(sc_mesh_messages_delivered_total[5m]) / rate(sc_mesh_messages_sent_total[5m]) * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "green",
                  "value": 95
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 8,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Network Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "sc_mesh_message_latency_ms",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 16,
          "x": 8,
          "y": 8
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 0,
    "links": []
  }
