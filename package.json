{
  "name": "sovereign-communications",
  "version": "0.1.0",
  "description": "Decentralized mesh networking communication platform",
  "private": true,
  "workspaces": [
    "core",
    "web",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test -w core",
    "test:integration": "npm test --prefix tests",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:coverage": "npm run test:unit -- --coverage",
    "test:mutation": "stryker run",
    "test:perf": "node --expose-gc core/src/crypto/benchmarks.ts",
    "dev": "npm run dev -w web",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "keywords": [
    "mesh-networking",
    "p2p",
    "webrtc",
    "encryption",
    "decentralized"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/jest-runner": "^8.0.0",
    "@stryker-mutator/typescript-checker": "^8.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "fast-check": "^3.15.0",
    "typescript": "^5.3.0"
  }
}
