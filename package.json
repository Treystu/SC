{
  "name": "sovereign-communications",
  "version": "0.1.3",
  "description": "Decentralized mesh networking communication platform",
  "private": true,
  "workspaces": [
    "core",
    "web",
    "shared"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:all": "./scripts/build-all.sh",
    "test": "npm run test --workspaces",
    "test:unit": "npm run test -w core",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --config jest.integration.config.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:cross-platform": "playwright test tests/e2e/cross-platform",
    "test:e2e:mobile": "npm run test:e2e:android && npm run test:e2e:ios",
    "test:e2e:android": "playwright test tests/e2e/mobile/android",
    "test:e2e:ios": "playwright test tests/e2e/mobile/ios",
    "test:visual": "playwright test --config playwright.visual.config.ts",
    "test:performance": "node tests/performance/runner.js",
    "test:coverage": "npm run test -w core -- --coverage",
    "test:mutation": "stryker run",
    "dev": "npm run dev -w web",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint:all": "./scripts/lint-all.sh",
    "appium": "appium",
    "appium:doctor": "appium-doctor",
    "ci:local": "./scripts/lint-all.sh && ./scripts/build-all.sh && npm test",
    "release": "standard-version"
  },
  "keywords": [
    "mesh-networking",
    "p2p",
    "webrtc",
    "encryption",
    "decentralized"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@stryker-mutator/core": "^8.0.0",
    "@stryker-mutator/jest-runner": "^8.0.0",
    "@stryker-mutator/typescript-checker": "^8.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "appium": "^2.11.0",
    "appium-uiautomator2-driver": "^3.7.0",
    "appium-xcuitest-driver": "^7.18.0",
    "eslint": "^8.54.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.3.0",
    "webdriverio": "^8.46.0"
  }
}
